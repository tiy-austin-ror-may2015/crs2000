<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css">

<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>


<div class="report-inner">
  <h1>MEETINGS</h1>
    <table class="report-container">
      <table id="meetings" class="table display">
        <thead>
          <tr>
            <th>TITLE</th>
            <th>AGENDA</th>
            <th>STARTS</th>
            <th>FINISHES</th>
            <th>VISIBILITY</th>
            <th>ROOM ID</th>
            <th>HOST</th>
          </tr>
        </thead>

        <tbody>
          <% @reports_meetings.each do |reports_meeting| %>
            <tr>
            <td><%= reports_meeting.title %></td>
            <td><%= reports_meeting.agenda %></td>
            <td><%= reports_meeting.start_time %></td>
            <td><%= reports_meeting.end_time %></td>
            <td><%= reports_meeting.private %></td>
            <td><%= reports_meeting.room_id %></td>
            <td><%= reports_meeting.employee_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </table>
</div>
