<p id='notice'><%= notice %></p>
<div class="container">
  <div class='row pull-right margin-top'>
    <form action='/search/rooms' method='GET'>
      <input type='text' name='search'/>
      <input type='submit' value='Search' class='btn btn-primary' />
    </form>
</div>
<section class='panel panel-default'>
<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Available</th>
      <th>Hours Until Next Meeting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td class="well"><%= room.name %></td>
        <td><%= room.location %></td>
        <td class="well"><%= room.available %></td>
        <td><%= room.hours_until_next_meeting %></td>
        <td class="well"><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td class="well"><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
<div class="center">
  <%= will_paginate @rooms, renderer: BootstrapPagination::Rails %>
</div>
