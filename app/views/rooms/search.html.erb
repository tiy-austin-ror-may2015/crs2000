<h2 class='center'>Search Results</i></h2>
<!-- Shows all rooms where name like search params -->
<% if @rooms.count > 0 %>
<h3 class='center'><%= @rooms.count %> Room(s) found.</h3>
  <section class='panel panel-default'>
  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Max Occupancy</th>
        <th>Room Number</th>
        <th>Image</th>
        <th>Location</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td class='well'><%= room.name %></td>
          <td><%= room.max_occupancy %></td>
          <td class='well'><%= room.room_number %></td>
          <td><%= room.imgurl %></td>
          <td class='well'><%= room.location %></td>
          <td><%= link_to 'Show', room  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </section>
  <div class='center'><%= will_paginate @rooms,
                        renderer: BootstrapPagination::Rails %></div>
<% end %>

<div class="container">
  <div class="col-md-9"></div>
  <div class='col-md-3 well center room-search'>
    <form action='/search/rooms' method='GET'>
      <div class='row'>
        <div class='col-md-4 align-right'>
          name
        </div>
        <div class='col-md-8 align-left'>
          <input type='text' size= '10' name='name'/>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4 align-right'>
          company
        </div>
        <div class='col-md-8 align-left'>
          <input type='text' size= '10' name='company_name'/>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4 align-right'>
          location
        </div>
        <div class='col-md-8 align-left'>
          <input type='text' size= '10' name='location'/>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4 align-right'>
          number
        </div>
        <div class='col-md-8 align-left'>
          <input type='text' size= '3' name='room_number'/>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4 align-right'>
          max occ >
        </div>
        <div class='col-md-8 align-left'>
          <input type='text' size= '3' name='max_occupancy'/>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4 align-right'>
          available?
        </div>
        <div class='col-md-8 align-left'>
          <input type='checkbox' checked = 'checked' name='available' value='true' />
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4'></div>
        <div class='col-md-8 align-left'>
          <input type='submit' value='Search' class='btn btn-primary' />
      </div>
    </form>
  </div>
</div>
