<div class="container">
  <div class="row">
    <h2><%= @company.name %></h2>
    <p><strong>Logo:</strong> <%= @company.logo %> </p>
    <p><strong>Primary color:</strong> <%= @company.primary_color %> </p>
    <p><strong>Secondary color:</strong> <%= @company.secondary_color %> </p>

    <p><strong>Employees: </strong>
      <ul> <% @company.employees.each do |employee| %>
        <li> <%= link_to employee.name, employee %> </li>
      <% end %> </ul>
    </p>
  </div>
  <div class="row">
    <%= link_to 'Edit', edit_company_path(@company, class: "btn btn-default") %>
    <%= link_to 'Back', company_path, class: "btn btn-default" %>
  </div>
</div>
