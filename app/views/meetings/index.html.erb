<p id="notice"><%= notice %></p>
<div class="row">
  <div>
  <h2 class="col-md-offset-3 col-md-3">All Meetings</h2>
  <%= link_to 'New Meeting', new_meeting_path, class: 'col-md-1 btn btn-info pull-right margin-top' %>
  </div>
</div>
<section class='panel panel-default'>
<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Agenda</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td class="well"><%= meeting.title %></td>
        <td><%= meeting.agenda %></td>
        <td class="well"><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td class="well"><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td class="well"><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
<div class="center">
  <%= will_paginate @meetings, renderer: BootstrapPagination::Rails %>
</div>
<br>
