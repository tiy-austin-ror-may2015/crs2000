<h1 class="col-md-6">Search Results for
  <i class="results"><%= params[:search].titleize %></i>
</h1>
<% if @meeting_results.count > 0 %>
<h3 class="center"><%= @meeting_results.count %> results found</h3>
  <section class='panel panel-default'>
  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Agenda</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @meeting_results.each do |meeting| %>
        <tr>
          <td class="well"><%= meeting.title %></td>
          <td><%= meeting.agenda %></td>
          <td class="well"><%= meeting.start_time %></td>
          <td><%= meeting.end_time %></td>
          <td class="well"><%= link_to 'Show', meeting %></td>
          <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
          <td class="well"><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </section>
  <div class="center"><%= will_paginate @meeting_results,
                        renderer: BootstrapPagination::Rails %></div>
<% end %>
  <div class="well center">
    <form action='/search/meetings' method='GET'>
      <input type='text' name='search' placeholder="Meeting title or agenda"/>
      <input type='submit' value='Search' class="btn btn-primary" />
    </form>
  </div>
