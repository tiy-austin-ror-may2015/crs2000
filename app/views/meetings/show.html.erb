<div class="container">
  <div class="row">
    <p id="notice" class="alert"><%= notice %></p>
    <p style='color:red;'><%= flash[:alert] %></p>

    <h2><%= @meeting.title.capitalize %></h2>

    <h3>Agenda</h3>
    <div class="well">
      <p><%= @meeting.agenda %></p>
    </div>

    <h3>Max Occupancy:</h3>
    <div class="well">
      <p><%= @max_occupancy %></p>
    </div>

    <h3>Current Occupancy:</h3>
    <div class="well">
      <p><%= @current_occupancy %></p>
    </div>

    <div class="col-md-6">
      <h3>Attendees</h3>
      <ul>
        <% @attendees.each do |attendee| %>
            <li><%= link_to attendee.employee.name, attendee.employee %></li>
        <% end %>
        <td><%= link_to 'Invite', employee_path %></td>
      </ul>
    </div>
    <div class="col-md-6">
      <h3>Meeting details</h3>
        <ul>
          <li><strong>Location:</strong> <%= link_to @meeting.room.name, @meeting.room %></li>
          <li><strong>Start time:</strong> <%= @meeting.start_time %></li>
          <li><strong>End time:</strong> <%= @meeting.end_time %></li>
          <li><strong>Total time:</strong> <%= @meeting.end_time - @meeting.start_time %> hour(s) </li>
        </ul>
    </div>
  </div>
  <div class="row">
    <%= link_to 'JOIN', join_employee_path(@meeting.id), method: 'POST', class: 'btn btn-default' %>
    <%= link_to 'Edit', edit_meeting_path(@meeting), class: "btn btn-success" %>
    <%= link_to 'Back', meetings_path, class: "btn btn-default" %>
  </div>
</div>

