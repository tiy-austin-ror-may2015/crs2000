<div class="container">
  <div class="row">
    <p id="notice" class="alert"><%= notice %></p>
    <p style='color:red;'><%= flash[:alert] %></p>

    <h2><%= @meeting.title.capitalize %></h2>

    <h3>Agenda</h3>
    <div class="well">
      <p><%= @meeting.agenda %></p>
    </div>

    <h3>Max Occupancy:</h3>
    <div class="well">
      <p><%= @max_occupancy %></p>
    </div>

    <h3>Current Occupancy:</h3>
    <div class="well">
      <p><%= @current_occupancy %></p>
    </div>

    <div class="col-md-6">
      <h3>Attendees</h3>
      <ul>
        <% @attendees.each do |attendee| %>
            <li><%= link_to attendee.name, attendee %></li>
        <% end %>

      </ul>
    </div>
    <div class="col-md-6">
      <h3>Meeting details</h3>
        <ul>
          <li><strong>Location:</strong> <%= link_to @meeting.room.name, @meeting.room %></li>
          <li><strong>Start time:</strong> <%= @meeting.start_time %></li>
          <li><strong>End time:</strong> <%= @meeting.end_time %></li>
          <li><strong>Total time:</strong> <%= @meeting.end_time - @meeting.start_time %> hour(s) </li>
        </ul>
    </div>
  </div>
  <div class="row">
    <%= link_to 'JOIN', join_employee_path(@meeting.id), method: 'POST', class: 'btn btn-default' %>
    <%= link_to 'Edit', edit_meeting_path(@meeting), class: "btn btn-success" %>
    <%= link_to 'Back', meetings_path, class: "btn btn-default" %>
  </div>

  <% if @meeting_owner == true %>
  <div class="row">
    <br>
    <br>
    <h2>Invite Employees</h2>
    <% if @invitees.count > 0 %>
        <table class="table" style="width:50%">
          <thead>
          <tr>
            <th>Invite?</th>
            <th>Employee</th>
          </tr>
          </thead>
          <tbody>
            <% @invitees.each do |invitee|%>
            <tr>
              <td>
                <% if invitee.invitations.where(meeting_id: @meeting.id).exists? %>
                    <br><p style="font-style: italic">Already invited!</p>
                <% else %>
                    <%= link_to 'Invite', invitation_path(@meeting.id, invitee.id), method: 'POST', class: 'btn btn-default' %>
                <% end %>
              </td>
              <td>
                <h5><strong><%= invitee.name %></strong></h5>
                <p><strong>Company: </strong><%= link_to invitee.company.name, invitee.company %> </p>
                <p><strong>Email: </strong><%= invitee.email %></p>
              </td>
            </tr>
            <%end %>
          </tbody>
        </table>
    <% else %>
        <p>There is no-one to invite.</p>
    <% end %>
  </div>
  <% end %>
</div>

